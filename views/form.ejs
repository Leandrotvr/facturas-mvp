  </form>
</div>

<script>
function addItem(){
  const div = document.createElement('div');
  div.className = 'grid grid-cols-4 gap-2';
  div.innerHTML = `
    <input name="desc" placeholder="DescripciÃ³n" class="border p-2 col-span-2">
    <input name="cant" type="number" step="0.01" placeholder="Cant." class="border p-2">
    <input name="precio" type="number" step="0.01" placeholder="Precio" class="border p-2">
  `;
  document.getElementById('items').appendChild(div);
}
</script>
