      <ul><% errores.forEach(e => { %><li>â€¢ <%= e %></li><% }) %></ul>
    </div>
  <% } %>

  <form method="post" action="/facturas" class="bg-white shadow rounded p-4 space-y-3">
    <div class="grid grid-cols-2 gap-3">
      <label class="block">NÃºmero
